<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IssueRunner.Gui.ViewModels"
        x:Class="IssueRunner.Gui.Views.RunTestsStatusDialog"
        x:DataType="vm:RunTestsStatusViewModel"
        Title="Running Tests"
        Width="600"
        Height="450"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    
    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        <!-- Status Section -->
        <StackPanel Grid.Row="0" Spacing="10">
            <TextBlock Text="{Binding CurrentStatus}" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Foreground="#333"/>
            <TextBlock Text="{Binding CurrentIssue}" 
                      FontSize="12" 
                      Foreground="#666">
                <TextBlock.IsVisible>
                    <Binding Path="CurrentIssue">
                        <Binding.Converter>
                            <x:Static Member="StringConverters.IsNotNullOrEmpty"/>
                        </Binding.Converter>
                    </Binding>
                </TextBlock.IsVisible>
            </TextBlock>
        </StackPanel>
        
        <!-- Progress Section -->
        <StackPanel Grid.Row="1" Spacing="15" Margin="0,0,0,15">
            <!-- Overall Progress -->
            <StackPanel Spacing="5">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" 
                              Text="{Binding ProgressText}" 
                              FontSize="12" 
                              Foreground="#666"/>
                    <TextBlock Grid.Column="1" 
                              Text="{Binding Progress, StringFormat='{}{0:F1}%'}" 
                              FontSize="12" 
                              FontWeight="SemiBold"
                              Foreground="#0078D4"/>
                </Grid>
                <ProgressBar Value="{Binding Progress}" 
                            Maximum="100" 
                            Height="20"
                            Foreground="#0078D4"
                            Background="#E0E0E0"/>
            </StackPanel>
            
            <!-- Statistics Grid -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <!-- Succeeded -->
                <Border Grid.Row="0" Grid.Column="0" 
                       Background="#E8F5E9" 
                       BorderBrush="#4CAF50" 
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="12,8"
                       Margin="0,0,20,10">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Succeeded" FontSize="11" Foreground="#666"/>
                        <TextBlock Text="{Binding Succeeded}" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#2E7D32"/>
                    </StackPanel>
                </Border>
                
                <!-- Failed -->
                <Border Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" 
                       Background="#FFEBEE" 
                       BorderBrush="#F44336" 
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="12,8">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Failed" FontSize="11" Foreground="#666"/>
                        <TextBlock Text="{Binding Failed}" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#C62828"/>
                    </StackPanel>
                </Border>
                
                <!-- Skipped -->
                <Border Grid.Row="1" Grid.Column="0" Margin="0,0,20,0" 
                       Background="#FFF3E0" 
                       BorderBrush="#FF9800" 
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="12,8">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Skipped" FontSize="11" Foreground="#666"/>
                        <TextBlock Text="{Binding Skipped}" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#E65100"/>
                    </StackPanel>
                </Border>
                
                <!-- Not Compiling -->
                <Border Grid.Row="1" Grid.Column="1" 
                       Background="#F3E5F5" 
                       BorderBrush="#9C27B0" 
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="12,8">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Not Compiling" FontSize="11" Foreground="#666"/>
                        <TextBlock Text="{Binding NotCompiling}" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#6A1B9A"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
        
        <!-- Status Details Section -->
        <Border Grid.Row="2" 
               Background="#F8F8F8" 
               BorderBrush="#D0D0D0" 
               BorderThickness="0,1,0,0"
               Padding="15,12"
               Margin="0,15,0,15">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <!-- Left: Current State -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,15,0">
                    <TextBlock Text="Current State:" 
                              FontSize="11" 
                              Foreground="#666"
                              FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentStatus}" 
                              FontSize="13" 
                              Foreground="#333"
                              FontWeight="SemiBold"
                              TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding CurrentIssue}" 
                              FontSize="11" 
                              Foreground="#666"
                              Margin="0,2,0,0">
                        <TextBlock.IsVisible>
                            <Binding Path="CurrentIssue">
                                <Binding.Converter>
                                    <x:Static Member="StringConverters.IsNotNullOrEmpty"/>
                                </Binding.Converter>
                            </Binding>
                        </TextBlock.IsVisible>
                    </TextBlock>
                </StackPanel>
                
                <!-- Right: Phase Progress -->
                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                    <TextBlock Text="Phase Progress:" 
                              FontSize="11" 
                              Foreground="#666"
                              FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentPhase}" 
                              FontSize="13" 
                              Foreground="#333"
                              FontWeight="SemiBold"
                              TextWrapping="Wrap">
                        <TextBlock.IsVisible>
                            <Binding Path="CurrentPhase">
                                <Binding.Converter>
                                    <x:Static Member="StringConverters.IsNotNullOrEmpty"/>
                                </Binding.Converter>
                            </Binding>
                        </TextBlock.IsVisible>
                    </TextBlock>
                    <TextBlock Text="{Binding CurrentPhaseProgressText}" 
                              FontSize="11" 
                              Foreground="#666"
                              Margin="0,2,0,0">
                        <TextBlock.IsVisible>
                            <Binding Path="CurrentPhaseProgressText">
                                <Binding.Converter>
                                    <x:Static Member="StringConverters.IsNotNullOrEmpty"/>
                                </Binding.Converter>
                            </Binding>
                        </TextBlock.IsVisible>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Buttons -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto,Auto">
            <Button Grid.Column="1" 
                   Content="Set Baseline" 
                   Command="{Binding SetBaselineCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="120"
                   Padding="20,8"
                   IsEnabled="{Binding CanSetBaseline}"
                   Background="#4CAF50"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,10,0"/>
            <Button Grid.Column="2" 
                   Content="Cancel" 
                   Command="{Binding CancelCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="100"
                   Padding="20,8"
                   IsEnabled="{Binding IsRunning}"
                   Background="#F44336"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,10,0"/>
            <Button Grid.Column="3" 
                   Content="Close" 
                   Command="{Binding CloseCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="100"
                   Padding="20,8"
                   IsEnabled="{Binding !IsRunning}"
                   Background="#6C757D"
                   Foreground="White"
                   FontWeight="SemiBold"/>
        </Grid>
    </Grid>
</Window>

