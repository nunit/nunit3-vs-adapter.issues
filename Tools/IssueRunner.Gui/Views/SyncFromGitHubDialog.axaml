<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IssueRunner.Gui.ViewModels"
        x:Class="IssueRunner.Gui.Views.SyncFromGitHubDialog"
        x:DataType="vm:SyncFromGitHubViewModel"
        Title="Sync from GitHub"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Options Section (shown when progress is hidden) -->
        <StackPanel Grid.Row="0" Spacing="15" IsVisible="{Binding !ShowProgress}">
            <TextBlock Text="Sync Options" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
            
            <!-- Sync Mode -->
            <StackPanel Spacing="5">
                <TextBlock Text="Sync Mode" FontWeight="SemiBold" FontSize="14"/>
                <ComboBox SelectedItem="{Binding SyncMode}" SelectedIndex="0">
                    <ComboBox.Items>
                        <x:String>All</x:String>
                        <x:String>Missing Metadata</x:String>
                    </ComboBox.Items>
                </ComboBox>
                <TextBlock Text="All: Sync all issues from GitHub&#x0a;Missing Metadata: Only sync issues that don't have metadata yet" 
                          FontSize="11" 
                          Foreground="#666"
                          TextWrapping="Wrap"
                          Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Update Existing -->
            <StackPanel Spacing="5">
                <CheckBox Content="Update Existing" IsChecked="{Binding UpdateExisting}"/>
                <TextBlock Text="If checked, update existing metadata (e.g., when issues change from Open to Closed). If unchecked, skip issues that already have metadata." 
                          FontSize="11" 
                          Foreground="#666"
                          TextWrapping="Wrap"
                          Margin="20,5,0,0"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Progress Section (shown during sync and for a few seconds after completion) -->
        <StackPanel Grid.Row="1" Spacing="15" IsVisible="{Binding ShowProgress}">
            <TextBlock Text="{Binding StatusText}" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Foreground="#333"/>
            
            <!-- Progress Bar -->
            <StackPanel Spacing="5">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" 
                              Text="{Binding ProgressText}" 
                              FontSize="12" 
                              Foreground="#666"/>
                    <TextBlock Grid.Column="1" 
                              Text="{Binding Progress, StringFormat='{}{0:F1}%'}" 
                              FontSize="12" 
                              FontWeight="SemiBold"
                              Foreground="#0078D4"/>
                </Grid>
                <ProgressBar Value="{Binding Progress}" 
                            Maximum="100" 
                            Height="20"
                            Foreground="#0078D4"
                            Background="#E0E0E0"/>
            </StackPanel>
            
            <!-- Statistics Grid -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <!-- Found -->
                <Border Grid.Row="0" Grid.Column="0" 
                       Background="#E8F5E9" 
                       BorderBrush="#4CAF50" 
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="12,8"
                       Margin="0,0,20,10">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Found" FontSize="11" Foreground="#666"/>
                        <TextBlock Text="{Binding IssuesFound}" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#2E7D32"/>
                    </StackPanel>
                </Border>
                
                <!-- Not Found -->
                <Border Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" 
                       Background="#FFEBEE" 
                       BorderBrush="#F44336" 
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="12,8">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Not Found" FontSize="11" Foreground="#666"/>
                        <TextBlock Text="{Binding IssuesNotFound}" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#C62828"/>
                    </StackPanel>
                </Border>
                
                <!-- Synced -->
                <Border Grid.Row="1" Grid.Column="0" Margin="0,0,20,0" 
                       Background="#E3F2FD" 
                       BorderBrush="#2196F3" 
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="12,8">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Synced" FontSize="11" Foreground="#666"/>
                        <TextBlock Text="{Binding IssuesSynced}" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#1565C0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
        
        <!-- Buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto,Auto,Auto,Auto" Margin="0,20,0,0">
            <Button Grid.Column="1" 
                   Content="Start Sync" 
                   Command="{Binding StartCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="120"
                   Padding="20,8"
                   IsEnabled="{Binding CanStart}"
                   Background="#4CAF50"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,10,0"/>
            <Button Grid.Column="2" 
                   Content="Sync to Folders" 
                   Command="{Binding SyncToFoldersCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="120"
                   Padding="20,8"
                   Background="#2196F3"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,10,0"
                   IsEnabled="{Binding CanSyncToFolders}"/>
            <Button Grid.Column="3" 
                   Content="{Binding ProgressViewButtonText}"
                   Command="{Binding ToggleProgressViewCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="120"
                   Padding="20,8"
                   Background="#FF9800"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,10,0"/>
            <Button Grid.Column="4" 
                   Content="Cancel" 
                   Command="{Binding CancelCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="100"
                   Padding="20,8"
                   IsEnabled="{Binding CanCancel}"
                   Background="#F44336"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,10,0"
                   IsVisible="{Binding IsRunning}"/>
            <Button Grid.Column="5" 
                   Content="Close" 
                   Command="{Binding CloseCommand}"
                   HorizontalAlignment="Center"
                   MinWidth="100"
                   Padding="20,8"
                   IsEnabled="{Binding !IsRunning}"
                   Background="#6C757D"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,10,0"/>
        </Grid>
    </Grid>
</Window>

